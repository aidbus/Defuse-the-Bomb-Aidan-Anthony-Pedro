from random import randint, choice, shuffle, sample

def genMathProblem():
    operators = ['+', '-', '*', '/']
    # Generate two random numbers
    num1 = randint(1, 10)
    num2 = randint(1, 10)
    # Select a random operator
    operator = choice(operators)

    # Ensure the result is less than or equal to 15
    if operator == '+':
        result = num1 + num2
    elif operator == '-':
        result = num1 - num2
    elif operator == '*':
        result = num1 * num2
    else:
        # Avoid division by zero and ensure the result is less than or equal to 15
        divisor_options = [n for n in range(1, num1) if num1 % n == 0]
        if divisor_options:
            divisor = choice(divisor_options)
            result = num1 // divisor
        else:
            result = num1 + num2  # Default to addition

    return f"{num1} {operator} {num2} =", result
